# R-KIDS - Ruach South Assembly
# Growth Happens Here
# Environment Variables Configuration

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# API Base URL (Frontend)
# Default: http://localhost:5000/api
VITE_API_BASE_URL=http://localhost:5000/api

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Flask Secret Key (CHANGE IN PRODUCTION!)
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production

# JWT Secret Key (CHANGE IN PRODUCTION!)
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# Server Port
# Default: 5000
PORT=5000

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Option 1: Use Supabase Connection String (Recommended)
# Get this from Supabase Dashboard > Settings > Database > Connection String
# Format: postgresql://postgres:[PASSWORD]@[PROJECT_REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your_password@your_project_ref.supabase.co:5432/postgres

# Option 2: Use Individual Database Variables (Alternative)
# Uncomment and fill these if not using DATABASE_URL
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=rkids_ministry

# ============================================
# CORS CONFIGURATION
# ============================================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Mobile App URL (optional)
# MOBILE_APP_URL=https://rkids.app

# ============================================
# MFA CONFIGURATION
# ============================================

# MFA Issuer Name
MFA_ISSUER=R-KIDS - Ruach South Assembly

# ============================================
# EMAIL CONFIGURATION (SendGrid)
# ============================================

# SendGrid API Key (for email notifications)
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=

# SendGrid From Email (must be verified in SendGrid)
SENDGRID_FROM_EMAIL=noreply@rkids.church

# ============================================
# SMS CONFIGURATION (Twilio)
# ============================================

# Twilio Account SID
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=

# Twilio Auth Token
TWILIO_AUTH_TOKEN=

# Twilio Phone Number (format: +1234567890)
TWILIO_PHONE_NUMBER=

# ============================================
# QR CODE CONFIGURATION
# ============================================

# QR Code Expiry Time (in minutes)
QR_CODE_EXPIRY_MINUTES=15

# ============================================
# GUARDIAN CONFIGURATION
# ============================================

# Guardian Expiry Days (for secondary guardians)
GUARDIAN_EXPIRY_DAYS=90

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================

# Maximum File Size (in bytes, default: 5MB)
MAX_FILE_SIZE=5242880

# Upload Destination Folder
UPLOAD_DEST=./uploads

# ============================================
# ENVIRONMENT
# ============================================

# Set to 'development', 'production', or 'testing'
FLASK_ENV=development
